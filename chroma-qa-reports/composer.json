{
    "name": "chroma-qa-reports",
    "description": "QA Reports Plugin PHP Tests",
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "mockery/mockery": "^1.6",
        "brain/monkey": "^2.6"
    },
    "autoload-dev": {
        "psr-4": {
            "ChromaQA\\Tests\\": "tests/php/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage"
    }
}